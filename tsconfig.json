{
    "compilerOptions": {
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "CommonJS",
        "esModuleInterop": true,
        "target": "ES2018",
        "moduleResolution": "node",
        "sourceMap": true,
        "rootDir": "./src",
        "outDir": "dist",
        "skipLibCheck": true,
        "noImplicitAny": true
    },
    "exclude": ["node_modules"]
}
