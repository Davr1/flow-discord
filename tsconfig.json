{
    "compilerOptions": {
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "esModuleInterop": true,
        "target": "ES2018",
        "moduleResolution": "Bundler",
        "sourceMap": true,
        "rootDir": "./src",
        "skipLibCheck": true,
        "noImplicitAny": true,
        "noEmit": true
    },
    "exclude": ["node_modules"]
}
